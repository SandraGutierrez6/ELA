    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = [
                { button: document.getElementById('button1'), description: document.getElementById('description1'), text: 'üíñ Su Personalidad Encantadora' },
                { button: document.getElementById('button2'), description: document.getElementById('description2'), text: 'üê∂ Car√°cter y Comportamiento' },
                { button: document.getElementById('button3'), description: document.getElementById('description3'), text: '‚ú® Detalles y Curiosidades' },
                { button: document.getElementById('button4'), description: document.getElementById('description4'), text: 'üéæ Sus Actividades Favoritas' },
                { button: document.getElementById('button5'), description: document.getElementById('description5'), text: 'üì∏ Fotos de Ela' } // El texto original ya incluye el icono üì∏
            ];

            buttons.forEach(item => {
                let isOpen = false;
                item.button.addEventListener('click', () => {
                    isOpen = !isOpen;
                    if (isOpen) {
                        // Cierra las otras descripciones si est√°n abiertas
                        buttons.forEach(otherItem => {
                            // Cierre de otros botones
                            const otherButtonContent = otherItem.button.innerHTML;
                            if (otherItem !== item && otherItem.description.classList.contains('open')) {
                                otherItem.description.classList.remove('open');
                                
                                // Restablece el texto del bot√≥n. Si empieza con 'Ocultar', usa el texto original.
                                if (otherButtonContent.startsWith('Ocultar ')) {
                                    // Restauramos el contenido HTML original (icono + texto)
                                    // Como no tenemos el texto original limpio en el array, lo reconstruimos
                                    
                                    // Solo hay que quitar el prefijo 'Ocultar '
                                    otherItem.button.innerHTML = otherButtonContent.replace('Ocultar ', '');
                                }
                                otherItem.isOpen = false;
                            }
                        });

                        // Abre el bot√≥n actual
                        item.description.classList.add('open');
                        
                        // Busca el texto original (incluyendo el icono) dentro del HTML del bot√≥n
                        const originalContent = item.button.innerHTML;
                        
                        // A√±ade 'Ocultar ' al texto
                        item.button.innerHTML = `Ocultar ${originalContent}`;
                    } else {
                        // Cierra el bot√≥n actual
                        item.description.classList.remove('open');
                        
                        // Quita el prefijo 'Ocultar ' del texto del bot√≥n
                        const currentContent = item.button.innerHTML;
                        if (currentContent.startsWith('Ocultar ')) {
                            item.button.innerHTML = currentContent.replace('Ocultar ', '');
                        }
                    }
                });
            });
        });
    </script>
